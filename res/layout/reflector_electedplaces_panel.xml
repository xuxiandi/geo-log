<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbUserListTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff999999"
        android:gravity="center"
        android:text="@string/SMyPlaces"
        android:textColor="#ff000000" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff999999" >

        <Button
            android:id="@+id/btnNewPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/SNewPlaceBtn"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCloseElectedPlacesPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/SCloseBtn"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSendSelectedPlacesToUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnRemoveSelectedPlaces"
            android:text="@string/SSendPlaceToUser"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRemoveSelectedPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnNewPlace"
            android:text="@string/SRemoveSelectedBtn"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvPlaces"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:choiceMode="multipleChoice"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/lbListHint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E7C04A"
        android:gravity="left"
        android:textColor="#ff000000"
        android:textSize="12sp"
        android:visibility="visible" />

</LinearLayout>