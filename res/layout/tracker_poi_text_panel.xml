<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:scrollbars="vertical">
<TableLayout android:id="@+id/TrackerPOITextPanelTableLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
		<TextView android:id="@+id/TextView01" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Введите текст" android:textStyle="bold"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/edPOIText"
			android:layout_width="wrap_content" android:editable="true" android:textStyle="bold" android:keepScreenOn="true" android:singleLine="false"></EditText>

		<Button
		    android:id="@+id/TrackerPOITextPanel_btnOk"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Добавить"
		    android:textSize="16dp" >
</Button>
	</TableLayout>
</ScrollView>
	