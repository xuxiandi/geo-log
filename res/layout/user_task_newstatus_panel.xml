<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llTaskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbTaskStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff999999"
                android:gravity="center"
                android:text="@string/STaskNewStatus"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/STaskStatus"
                android:textSize="16sp" >
            </TextView>

            <Spinner
                android:id="@+id/spTaskStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/STaskStatusReason"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/edTaskStatusReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/STaskStatusComment"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/edTaskStatusComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTaskResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/lbTaskResult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff999999"
                android:gravity="center"
                android:text="@string/STaskResult"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/STaskResultCode"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/edTaskResultCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SResultComment1"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/edTaskResultComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SChangeStatus" />
    </LinearLayout>

</ScrollView>