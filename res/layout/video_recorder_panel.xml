<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/VideoRecorderPanelCameraSurfaceLayout"
        android:layout_width="124dp"
        android:layout_height="124dp" >

        <SurfaceView
            android:id="@+id/VideoRecorderPanelCameraSurface"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/lbVideoRecorderPanelCameraStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/SVideoRecorder"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/VideoRecorderPanelSurfaceLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >

            <SurfaceView
                android:id="@+id/VideoRecorderPanelSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/lbVideoRecorderPanelSurface"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>