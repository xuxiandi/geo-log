<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff999999" >

        <TextView
            android:id="@+id/lbName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pbProgress"
            android:background="#ff999999"
            android:gravity="left"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/pbProgress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff999999"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF000000"
        android:cacheColorHint="#FF000000"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/previewfileselector_list_selector_flatcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff999999"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSelect"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="@string/SSelect"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPreview"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="@string/SPreview"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancel"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="@string/SCancel"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>