<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:scrollbars="vertical">
<TableLayout android:id="@+id/TrackerPOIPanelTableLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
		<TextView android:id="@+id/TextView04" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Имя объекта"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/edGMOName"
			android:layout_width="wrap_content" android:editable="false"></EditText>
		<TextView android:id="@+id/TextView01" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="состояние соединения"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/edGMOConnectionState"
			android:layout_width="wrap_content" android:editable="false"></EditText>
		<TextView android:id="@+id/TextView02" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Состояние текущ. позиции"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/edGMOLocationState"
			android:layout_width="wrap_content" android:editable="false"></EditText>
		<TextView android:id="@+id/TextView03" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="Состояние тревоги"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/edGMOAlertState"
			android:layout_width="wrap_content" android:editable="false"></EditText>

		<Button
		    android:id="@+id/btnGMOUpdateInfo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Обновить"
		    android:textSize="16dp" >
</Button>

		<Button
		    android:id="@+id/btnGMOShowPosition"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Показать текущ. позицию"
		    android:textSize="16dp" >
</Button>

		<Button
		    android:id="@+id/btnGMOAddTrack"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Добавить трек"
		    android:textSize="16dp" >
</Button>
	</TableLayout>
</ScrollView>
