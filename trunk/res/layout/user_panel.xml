<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff999999"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff999999"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff909090"
            android:gravity="center"
            android:text="@string/SUser1"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/SUser1"
                android:padding="8dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivUser"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SName"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edUserName"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ff999999"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="left"
                            android:inputType="none"
                            android:paddingLeft="2dp"
                            android:textColor="#ffffffff"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SConnectionState"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/edUserConnectionState"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ff999999"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="left"
                            android:inputType="none"
                            android:paddingLeft="2dp"
                            android:textColor="#ffffffff"
                            android:textSize="18sp"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff999999" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SFullName1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edUserFullName"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#ff999999"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="left"
                        android:inputType="none"
                        android:paddingLeft="2dp"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff999999" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SContactInfo1"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edUserContactInfo"
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#ff999999"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="left"
                        android:inputType="none"
                        android:paddingLeft="2dp"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false" >

                    <TextView
                        android:id="@+id/TextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:text="@string/SDomains"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edUserDomains"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/cbUserTaskEnabled"
                        android:layout_toRightOf="@+id/TextView1"
                        android:background="#ff999999"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="left"
                        android:inputType="none"
                        android:paddingLeft="2dp"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights" />

                    <CheckBox
                        android:id="@+id/cbUserTaskEnabled"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerVertical="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="@string/STaskEnabled"
                        android:textSize="16sp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff909090" >

            <TextView
                android:id="@+id/lbCommunicationName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pbCommunicationProgress"
                android:background="#ff909090"
                android:gravity="center"
                android:text="@string/SCommunication"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/pbCommunicationProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ff909090"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnUserMessaging"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="@string/SMessaging"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnUserLiveMessaging"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:enabled="false"
                android:text="@string/SLiveChat"
                android:textSize="18sp" >
            </Button>

            <Button
                android:id="@+id/btnUserVideoPhone"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:enabled="false"
                android:text="@string/SVideoPhone"
                android:textSize="18sp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnUserLocation"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/SShowCurrentLocation"
                android:textSize="18sp" >
            </Button>

            <Button
                android:id="@+id/btnUserCoGeoMonitorObjects"
                style="android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:enabled="false"
                android:text="@string/SMyObjects1"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff909090"
            android:gravity="center"
            android:text="@string/SCurrentActivity"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnUserCurrentActivity"
                style="@style/Theme.DefaultTransparent"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnUserCurrentActivityComponentList"
                style="@style/Theme.DefaultTransparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SContent"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff909090"
            android:gravity="center"
            android:text="@string/SLastActivities"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnUserLastActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SShowAllList"
            android:textSize="18sp" >
        </Button>

        <LinearLayout
            android:id="@+id/llUserTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff909090"
                android:gravity="center"
                android:text="@string/SUserTasks"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff999999" >

                <Button
                    android:id="@+id/btnUserTasks"
                    style="android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/STasks"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnUserOriginatedTasks"
                    style="android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/SOriginatedTasks"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>